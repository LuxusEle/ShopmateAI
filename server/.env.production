# Production Environment
PORT=5000
NODE_ENV=production

# JWT Configuration
JWT_SECRET=change_this_to_secure_random_string_in_production
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=7d

# Database Configuration (Use production MongoDB)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/shopmate-ai?retryWrites=true&w=majority
MONGODB_DATABASE=shopmate-ai

# CORS Configuration (Update with production URL)
CORS_ORIGIN=https://your-vercel-domain.vercel.app

# API Configuration
API_PREFIX=/api

# AI Service Configuration
OPENAI_API_KEY=your_production_openai_key
